<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-success="status==True">

                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button string="Accept" type="object" class="oe_highlight" name="action_accept" icon="fa-thumbs-up" />
                <button string="Refuse" type="object" class="oe_highlight" name="action_refuse" icon="fa-thumbs-down" />
                <field name="status"/>

            </tree>

        </field>
    </record>
</odoo>